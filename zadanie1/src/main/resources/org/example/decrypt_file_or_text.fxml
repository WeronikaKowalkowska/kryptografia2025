<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <Text text="Choose your input type:">
        <font>
            <Font name="Segoe Script" size="22.0" />
        </font>
    </Text>
    <Button fx:id="btnEncryptFile" prefHeight="30.0" prefWidth="138.0" text="Decrypt file">
      <font>
         <Font name="Segoe Script Bold" size="12.0" />
      </font></Button>
    <Button fx:id="btnEncryptText" text="Decrypt plain text">
      <font>
         <Font name="Segoe Script Bold" size="12.0" />
      </font></Button>
</VBox>
